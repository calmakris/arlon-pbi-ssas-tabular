{
  "name": "Accounts Receivable Open Balance Amount Due MTD%",
  "description": "This measure gives the percentage of outstanding balance from customers so far as of a key date and with due dates in the month of the key date. If used with a date context, the key date is the latest date within that context. ",
  "expression": [
    "",
    "VAR _MaxRefDate =",
    "    CALCULATE(",
    "        MAX( 'Calendar'[Date] ),",
    "        FILTER(",
    "            'Calendar',",
    "            'Calendar'[Date] <= [Report Date]",
    "        )",
    "    )",
    "    ",
    "VAR _MinRefDate =",
    "    CALCULATE(",
    "        MIN( 'Calendar'[Date] ),",
    "        FILTER(",
    "            'Calendar',",
    "            'Calendar'[Date] <= [Report Date]",
    "        )",
    "    )    ",
    "",
    "",
    "VAR _OpenBalanceForTheMonthInContext = CALCULATE([Accounts Receivable Open Balance Amount], ",
    "     FILTER(",
    "            ALL( 'Accounts Receivable'[Due Date] ) ,",
    "           'Accounts Receivable'[Due Date] >= _MinRefDate &&",
    "           'Accounts Receivable'[Due Date] <= _MaxRefDate",
    "        )",
    "    )",
    "",
    "RETURN",
    "    DIVIDE(_OpenBalanceForTheMonthInContext, [Accounts Receivable Open Balance Amount],0)"
  ],
  "formatString": "#,##0.00 %",
  "displayFolder": "Finance\\_Time-Based",
  "annotations": [
    {
      "name": "TabularEditor_InPerspective",
      "value": "[\"Finance\"]"
    }
  ]
}
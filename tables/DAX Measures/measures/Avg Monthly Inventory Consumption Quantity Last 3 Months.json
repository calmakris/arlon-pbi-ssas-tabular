{
  "name": "Avg Monthly Inventory Consumption Quantity Last 3 Months",
  "description": "Monthly average of sum of 'Inventory Consumption'[Quantity] posted in the previous 3 calendar months. Can be toggled between quantity and amount values (default = quantity).",
  "expression": [
    "",
    "VAR _NumOfMonths = 3",
    "VAR _MaxDate =",
    "    CALCULATE(",
    "        MAX('Calendar'[Date]),",
    "        FILTER(",
    "            ALL( Calendar ),",
    "            Calendar[Date] <= [Report Date]",
    "        )",
    "    )",
    "VAR _MinDate = EDATE(_MaxDate, -_NumOfMonths)",
    "",
    "RETURN",
    "    IF(",
    "        ISFILTERED(Calendar)",
    "            && [Inventory Snapshot Quantity],",
    "        CALCULATE(",
    "            DIVIDE( ABS( SUM( 'FACT_MonthlyConsumption'[ConsumptionQty] ) + 0 ), _NumOfMonths ),",
    "            FILTER(",
    "                ALL( Calendar[Date] ),",
    "                Calendar[Date] >= _MinDate",
    "                    && Calendar[Date] <= _MaxDate",
    "            )",
    "        )",
    "    )"
  ],
  "formatString": "#,0.00",
  "displayFolder": "Inventory\\_Consumption",
  "annotations": [
    {
      "name": "TabularEditor_InPerspective",
      "value": "[\"Finance\",\"Inventory\",\"Operations\"]"
    }
  ]
}
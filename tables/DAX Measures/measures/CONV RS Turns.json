{
  "name": "CONV RS Turns",
  "description": "This measure quantifies the efficiency of the Receipt Substitution (RS) process within the Converting department. It calculates how frequently the RS inventory is replenished within a specified timeframe, usually monthly. A higher \"Turns\" value indicates effective utilization of RS materials, leading to reduced waste and improved operational efficiency. The calculation involves dividing the value of shipped products stemming from RS transactions by the RS inventory balance.",
  "expression": [
    "",
    "VAR RefDate =",
    "    CALCULATE(",
    "        MAX('Calendar'[Date]),",
    "        FILTER(",
    "            'Calendar',",
    "            'Calendar'[Date] <= [Report Date]",
    "        )",
    "    )",
    "",
    "VAR RsInventoryStockEOM =",
    "    CALCULATE(",
    "        SUM('Inventory RS Snapshots'[Amount]),",
    "        KEEPFILTERS( 'Calendar'[Date] = RefDate )",
    "    )",
    "",
    "VAR RSShippedQty =",
    "    CALCULATE(",
    "        ABS( SUM( 'Goods Movement'[Amount] ) ), ",
    "        FILTER(",
    "            ALL( 'Goods Movement'[RS Batch Flag] ),",
    "            'Goods Movement'[RS Batch Flag] = \"Yes\"",
    "        ),",
    "        FILTER(",
    "            ALL( 'Goods Movement'[Movement Type] ),",
    "            'Goods Movement'[Movement Type] = \"601\"",
    "        )",
    "    )",
    "",
    "RETURN ",
    "    DIVIDE( RSShippedQty, RsInventoryStockEOM, 0 )",
    "",
    "",
    "",
    "",
    "",
    "",
    "",
    "",
    "",
    "",
    "",
    ""
  ],
  "formatString": "#,##0.00",
  "displayFolder": "Converting",

{
  "name": "Expired Inventory Snapshot Amount",
  "description": "Latest snapshot of the expired inventory amount depending on the date filter/context. If there is no date filter/context, then this value is yesterday's snapshot.",
  "expression": [
    "",
    "VAR RefDate =",
    "    CALCULATE(",
    "        MAX('Calendar'[Date]),",
    "        FILTER(",
    "            'Calendar',",
    "            'Calendar'[Date] <= [Report Date]",
    "        )",
    "    )",
    "",
    "RETURN",
    "    CALCULATE(",
    "        SUM( 'Inventory Snapshots'[Amount] ),",
    "        KEEPFILTERS( 'Calendar'[Date] = RefDate ),",
    "        KEEPFILTERS( 'Inventory Snapshots'[Expired Flag] = \"Yes\" )",
    "    )"
  ],
  "formatString": "#,0",
  "displayFolder": "Inventory\\_Time-Based",
  "annotations": [
    {
      "name": "TabularEditor_InPerspective",
      "value": "[\"Inventory\",\"Planning\",\"Product Management\"]"
    }
  ]
}
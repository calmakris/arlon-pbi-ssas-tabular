{
  "name": "Expired Inventory Snapshot Amount",
  "description": "The most recent representation of the value of expired inventory, contingent on the applied date filter/context. In the absence of any date filter/context, this figure corresponds to the snapshot taken on the preceding day.",
  "expression": [
    "",
    "VAR RefDate =",
    "    CALCULATE(",
    "        MAX('Calendar'[Date]),",
    "        FILTER(",
    "            'Calendar',",
    "            'Calendar'[Date] <= [Report Date]",
    "        )",
    "    )",
    "",
    "RETURN",
    "    CALCULATE(",
    "        SUM( 'Inventory Snapshots'[Amount] ),",
    "        KEEPFILTERS( 'Calendar'[Date] = RefDate ),",
    "        KEEPFILTERS( 'Inventory Snapshots'[Expired Flag] = \"Yes\" )",
    "    )"
  ],
  "formatString": "#,0",
  "displayFolder": "Inventory\\_Time-Based",
  "annotations": [
    {
      "name": "TabularEditor_InPerspective",
      "value": "[\"Finance\",\"Inventory\",\"Planning\",\"Product Management\"]"
    }
  ]
}
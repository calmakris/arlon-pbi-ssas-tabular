{
  "name": "Inventory Amount Closing 2 Months Ago",
  "description": "Snapshot of inventory amount of the end of the month before last month",
  "expression": [
    "",
    "-- Get last date with snapshot",
    "VAR _LastDateWithData =",
    "    CALCULATE(",
    "        MAX('Inventory Snapshots'[Snapshot Date]),",
    "        FILTER(",
    "            'Inventory Snapshots',",
    "            'Inventory Snapshots'[Snapshot Date] <= [Report Date]",
    "        )",
    "    )",
    "",
    "-- Get last date with snapshot 2 months ago",
    "VAR _DateRef = ",
    "    CALCULATE(",
    "        MAX('Inventory Snapshots'[Snapshot Date]),",
    "        FILTER(",
    "            ALL( 'Inventory Snapshots' ),",
    "            'Inventory Snapshots'[Snapshot Date] <= EOMONTH(_LastDateWithData, -2)",
    "                && 'Inventory Snapshots'[Snapshot Date] > EOMONTH(_LastDateWithData, -3)",
    "        )",
    "    )",
    "",
    "RETURN",
    "CALCULATE(",
    "    [Inventory Snapshot Amount],",
    "    FILTER(",
    "        ALL( 'Calendar' ),",
    "        'Calendar'[Date] = _DateRef",
    "    )",
    ")"
  ],
  "formatString": "#,0",
  "displayFolder": "Inventory\\_Time-Based",
  "annotations": [
    {
      "name": "TabularEditor_InPerspective",
      "value": "[\"Inventory\",\"Planning\"]"
    }
  ]
}
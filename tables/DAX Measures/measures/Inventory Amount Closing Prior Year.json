{
  "name": "Inventory Amount Closing Prior Year",
  "description": "Inventory snapshot amount at the end of previous calendar year (Dec 31st)",
  "expression": [
    "",
    "-- Get year of last snapshot",
    "VAR _ThisYear =",
    "    CALCULATE(",
    "        YEAR( MAX('Inventory Snapshots'[Snapshot Date]) ),",
    "        FILTER(",
    "            'Inventory Snapshots',",
    "            'Inventory Snapshots'[Snapshot Date] <= [Report Date]",
    "        )",
    "    )",
    "",
    "-- Get last date before year of last snapshot",
    "VAR _LastDate =",
    "    CALCULATE(",
    "        MAX('Inventory Snapshots'[Snapshot Date]),",
    "        FILTER(",
    "            ALL( 'Calendar' ),",
    "            'Calendar'[Calendar Year] < FORMAT( _ThisYear, \"0\" )",
    "        )",
    "    )",
    "",
    "RETURN",
    "CALCULATE(",
    "    [Inventory Snapshot Amount],",
    "    FILTER(",
    "        ALL( 'Calendar' ),",
    "        'Calendar'[Date] = _LastDate",
    "    )",
    ")"
  ],
  "formatString": "#,0",
  "displayFolder": "Inventory\\_Time-Based",
  "annotations": [
    {
      "name": "TabularEditor_InPerspective",
      "value": "[\"Inventory\",\"Planning\"]"
    }
  ]
}
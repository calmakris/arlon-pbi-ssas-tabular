{
  "name": "Inventory Amount Opening Current Week",
  "description": "Inventory snapshot amount on the Sunday of current week",
  "expression": [
    "",
    "-- Get date of last snapshot",
    "VAR _LastDate =",
    "    CALCULATE(",
    "        MAX('Inventory Snapshots'[Snapshot Date]),",
    "        FILTER(",
    "            'Inventory Snapshots',",
    "            'Inventory Snapshots'[Snapshot Date] <= [Report Date]",
    "        )",
    "    )",
    "",
    "-- Get Sunday on or before the date of last snapshot",
    "VAR _DateRef =",
    "    CALCULATE(",
    "        MAX('Inventory Snapshots'[Snapshot Date]),",
    "        FILTER(",
    "            ALL( 'Calendar' ),",
    "            'Calendar'[Weekday] = \"Sun\"",
    "                && 'Calendar'[Date] <= _LastDate",
    "        )",
    "    )",
    "",
    "RETURN",
    "CALCULATE(",
    "    [Inventory Snapshot Amount],",
    "    FILTER(",
    "        ALL( 'Calendar' ),",
    "        'Calendar'[Date] = _DateRef",
    "    )",
    ")"
  ],
  "formatString": "#,0",
  "displayFolder": "Inventory\\_Time-Based",
  "annotations": [
    {
      "name": "TabularEditor_InPerspective",
      "value": "[\"Inventory\",\"Planning\"]"
    }
  ]
}
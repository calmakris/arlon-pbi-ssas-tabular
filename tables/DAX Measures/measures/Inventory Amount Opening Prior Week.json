{
  "name": "Inventory Amount Opening Prior Week",
  "description": "Inventory snapshot amount on the Sunday of last week",
  "expression": [
    "",
    "-- Get date of last snapshot",
    "VAR _LastDate =",
    "    CALCULATE(",
    "        MAX( 'Inventory Snapshots'[Snapshot Date] ),",
    "        FILTER(",
    "            'Inventory Snapshots',",
    "            'Inventory Snapshots'[Snapshot Date] <= [Report Date]",
    "        )",
    "    )",
    "",
    "-- Get week no of last snapshot from calendar",
    "VAR _ThisWeek =",
    "    CALCULATE(",
    "        MAX( Calendar[Calendar Week Number] ),",
    "        FILTER(",
    "            ALL( 'Calendar' ),",
    "            Calendar[Date] = _LastDate",
    "        )",
    "    )",
    "    ",
    "-- Get Sunday in the week before last snapshot",
    "VAR _DateRef =",
    "    CALCULATE(",
    "        MIN( Calendar[Date] ),",
    "        FILTER(",
    "            ALL( Calendar ),",
    "            Calendar[Calendar Week Number] = _ThisWeek - 1",
    "                && Calendar[Weekday] = \"Sun\"",
    "        )",
    "    )",
    "",
    "RETURN",
    "CALCULATE(",
    "    [Inventory Snapshot Amount],",
    "    FILTER(",
    "        ALL( 'Calendar' ),",
    "        'Calendar'[Date] = _DateRef",
    "    )",
    ")"
  ],
  "formatString": "#,0",
  "displayFolder": "Inventory\\_Time-Based",
  "annotations": [
    {
      "name": "TabularEditor_InPerspective",
      "value": "[\"Inventory\",\"Planning\"]"
    }
  ]
}
{
  "name": "Sample Request Cost",
  "description": "Total standard cost of materials in free-of-charge or sales orders for samples",
  "expression": [
    "",
    "CALCULATE(",
    "    SUM( 'Sales Order'[CostAmountUSD] ),",
    "    FILTER(",
    "        'Sales Order',",
    "        'Sales Order'[Sample Category] <> \"Not Applicable\"",
    "    )",
    ") +",
    "SUM( 'Odoo Sample Request'[Cost Amount] )"
  ],
  "formatString": "#,0.00",
  "displayFolder": "Sample Requests",
  "annotations": [
    {
      "name": "TabularEditor_InPerspective",
      "value": "[\"CS Dashboard\"]"
    }
  ]
}
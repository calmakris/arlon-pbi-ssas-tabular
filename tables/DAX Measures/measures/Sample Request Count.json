{
  "name": "Sample Request Count",
  "description": "Total count of free-of-charge or sample sales orders and open requests in Odoo",
  "expression": [
    "",
    "CALCULATE(",
    "    DISTINCTCOUNT( 'FACT_SalesOrder'[OrderNoKey] ),",
    "    FILTER(",
    "        'FACT_SalesOrder',",
    "        'FACT_SalesOrder'[FOCCategory] <> \"Not Applicable\"",
    "    )",
    ") +",
    "DISTINCTCOUNT( 'Odoo Sample Request'[Ticket Number] )"
  ],
  "formatString": "#,0",
  "displayFolder": "Sample Requests",
  "annotations": [
    {
      "name": "TabularEditor_InPerspective",
      "value": "[\"CS Dashboard\"]"
    }
  ]
}